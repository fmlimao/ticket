{
  "name": "ticket",
  "version": "1.0.0",
  "description": "Projeto para controle de ticket",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "test:silent": "jest --watch --silent --colors --noStackTrace",
    "test:staged": "jest --coverage --passWithNoTests --findRelatedTests --silent --noStackTrace",
    "test:ci": "jest --coverage --silent --noStackTrace",
    "prepare": "husky install",
    "sonar":  "node sonar-project.js"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "npm run sonar"
    ]
  },
  "jestSonar": {
      "reportPath":  "coverage",
      "reportFile":  "test-reporter.xml",
      "indent":  4
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fmlimao/ticket.git"
  },
  "keywords": [],
  "author": "Leandro Macedo <fmlimao@gmail.com> (http://github.com/fmlimao)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fmlimao/ticket/issues"
  },
  "homepage": "https://github.com/fmlimao/ticket#readme",
  "devDependencies": {
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^11.2.6",
    "sonarqube-scanner": "^2.8.1",
    "standard": "^16.0.4",
    "supertest": "^6.1.6"
  }
}
